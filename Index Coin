        inset 0 0 22px rgba(0,0,0,.45),
        inset 0 0 2px rgba(255,255,255,.25),
        0 10px 28px rgba(0,0,0,.45);
    }

    /* Bimetall-Ring (gold) + Kern (silber) – Vorderseite */
    .heads {
      background:
        radial-gradient(circle at 50% 50%, #cfd6db 0 35%, #bfc6cb 37% 38%, transparent 39%),
