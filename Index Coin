<body>
  <div class="app">
    <h1>CoinFlip – Euro-Style</h1>
    <div class="wrap">
      <div id="coin" class="coin" aria-live="polite">
        <div class="face heads" aria-label="Kopf"></div>
        <div class="face tails" aria-label="Zahl"></div>
        <div class="edge" aria-hidden="true"></div>
      </div>
    </div>
    <button id="flipBtn" class="btn">Flip</button>
    <span id="result" class="pill">Bereit</span>
  </div>

  <script>
    const coin = document.getElementById('coin');
    const result = document.getElementById('result');

    function randBit(){
      const a=new Uint32Array(1); crypto.getRandomValues(a); return a[0]&1;
    }

    async function flip(){
      const spins = 4 + Math.floor(Math.random()*4); // 4..7
      const bit   = randBit(); // 0=heads, 1=tails
      const deg   = 180 * (2*spins + bit);
      coin.style.transform = `rotateY(${deg}deg)`;
      result.textContent = '…';
      await new Promise(r=>setTimeout(r, 920));
      result.textContent = bit===0 ? 'Kopf' : 'Zahl';
    }

    document.getElementById('flipBtn').addEventListener('click', flip);
  </script>
</body>
